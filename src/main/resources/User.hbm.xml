<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.volnoboy.User" table="Users">
        <id name="id" type="int">
            <column name="ID"/>
            <generator class="identity"/>
        </id>
        <property name="name" type="java.lang.String">
            <column name="NAME"/>
        </property>

        <many-to-one name="proteinData" class="com.volnoboy.ProteinData" column="PROTEIN_DATA_ID" cascade="save-update" unique="true"/>

        <list name="history" table="USER_HISTORY" inverse="true" cascade="save-update">
            <key column="USER_ID"/>
            <list-index column="POSITION"/>
            <one-to-many class="com.volnoboy.UserHistory"/>
        </list>
        <join table="USER_GOALALERT" optional="true">
            <key column="USER_ID"/>
            <many-to-one name="goalAlert" column="GOALALERT_ID" not-null="true" unique="true" cascade="save-update"/>
        </join>
    </class>
</hibernate-mapping>